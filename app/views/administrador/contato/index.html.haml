%h1
  Listando Familias

%table
  %tr
    %th
      Nome
    %th
      Email
    %th
      Mensagem
    %th
    %th
    %th
  -@mensagens.each do |msg|
    %tr
      %td
        = msg.name
      %td
        = msg.email  
      %td
        = msg.text  
      %td
        = link_to 'Mostrar', administrador_contato_path(msg.id), method: :get
      %td
        = link_to 'Editar', edit_administrador_contato_path(msg)
      %td
        = link_to 'Deletar', administrador_contato_path(msg), method: :delete, data: { confirm: "Esta certo que quer deletar a mensagem #{msg.name} ?" }
%br
= #link_to 'Nova Familia', new_administrador_contato_path
