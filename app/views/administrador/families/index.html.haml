%h1
  Listando Familias

%table
  %tr
    %th
      Nome
    %th
    %th
    %th
  -@families.each do |family|
    %tr
      %td
        = family.name
      %td
        = link_to 'Mostrar', administrador_family_path(family.id), method: :get
      %td
        = link_to 'Editar', edit_administrador_family_path(family)
      %td
        = link_to 'Deletar', administrador_family_path(family), method: :delete, data: { confirm: "Esta certo que quer deletar a familia #{family.name} ?" }
%br
= link_to 'Nova Familia', new_administrador_family_path


