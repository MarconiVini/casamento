%h1
  Convidados relacionados à
  =@family.name

%table.resultados
  %tr
    %th
      Nome
    %th
      Presença
    %th
      
  -@members.each do |m|
    %tr
      %td
        =m.name
      %td
        -if m.confirmado == true 
          Presença confirmada
        -else
          Ainda não confirmada
      %td
        -if m.confirmado == true
          =link_to "Cancelar Presença", family_member_cancel_path(m.parametrize_name)
        -else
          =link_to "Confirmar Presença", family_member_confirm_path(m.parametrize_name) 
